{
  "name": "test1",
  "version": "1.0.7",
  "main": "main.js",
  "description": "Test1 Electron Application",
  "author": "",
  "license": "ISC",

  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --publish=never",
    "publish": "electron-builder --publish=always"
  },

  "repository": {
    "type": "git",
    "url": "https://github.com/dharamtej/electron-app.git"
  },

  "build": {
    "appId": "com.quesmatrix.test",
    "productName": "Test1 App",

    "publish": [
      {
        "provider": "github",
        "owner": "dharamtej",
        "repo": "electron-app"
      }
    ],

    "compression": "store",

    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-${version}.exe"
    },

    "mac": {
      "target": ["zip"],
      "category": "public.app-category.utilities",
      "icon": "build/icon.icns"
    },

    "linux": {
      "target": ["AppImage"],
      "category": "Utility",
      "icon": "build/icon.png"
    }
  },

  "dependencies": {
    "electron-updater": "^6.3.9"
  },

  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0"
  }
}
